
generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "postgresql"
 
}

enum Role {
  SUPER_ADMIN
  TENANT_ADMIN
  DOCTOR
  STAFF
}

// Bu tablo, sistemi kiralayan klinikleri (kiracıları) temsil eder.
model Tenant {
  id        String   @id @default(uuid()) 
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())
  users     User[]
}

// Sistemdeki her bir birey burada tutulur.
model User {
  id        String   @id @default(uuid()) 
  email     String   @unique
  password  String
  role      Role     @default(TENANT_ADMIN)

  tenantId  String?
  tenant    Tenant?  @relation(fields: [tenantId], references: [id]) 

  createdAt DateTime @default(now())
}

model Customer {
  id         String   @id @default(uuid())
  tenantId   String
  name       String
  email      String
  phone      String
}